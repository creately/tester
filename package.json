{
  "name": "ts-starter",
  "version": "0.0.0",
  "description": "A bare minimum starter repository for writing and testing browser modules using typescript.",
  "main": "dist/lib/test.js",
  "typings": "dist/lib/test.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "prettier --print-width 120 --single-quote --trailing-comma es5 --write \"src/**/*.ts\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "prepublish": "npm run lint && npm run build"
  },
  "bin": {
    "tester": "./dist/bin/tester.js"
  },
  "preferGlobal": true,
  "author": "Anonymous",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "globby": "^10.0.1",
    "yargs": "^15.0.2"
  }
}
